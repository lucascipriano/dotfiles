foreground = #dfdfdf
foreground-alt = #555
primary = #22ff00
secondary = #22ff00
alert = #9FC4D9
label = #cc000000
deep = #C251BD
 

[bar/bar]
width = 100%
height = 35
;radius = 6.0
fixed-center = false
top = true
enable-ipc = true
;override-redirect = true
;wm-restack = i3


